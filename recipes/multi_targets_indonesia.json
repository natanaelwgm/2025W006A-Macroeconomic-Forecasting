{
  "run_name": "indonesia_macro_forecast",
  "targets": [
    {
      "id": "cpi_yoy",
      "name": "CPI Year-over-Year",
      "horizons": [1, 3, 6]
    },
    {
      "id": "gdp_yoy",
      "name": "GDP Year-over-Year",
      "horizons": [1, 3, 6]
    },
    {
      "id": "usd_idr",
      "name": "USD/IDR Exchange Rate",
      "horizons": [1, 3, 6]
    }
  ],
  "frequency": "M",
  "strategy": "frozen",
  "train": { "start": "2005-01-31", "end": "2019-12-31" },
  "test": { "start": "2020-01-31", "end": "2025-07-31" },
  "data": {
    "path": "data/processed/indonesia_macro_monthly.csv",
    "date_col": "date"
  },
  "models_filter": [
    "Tree",
    "RandomForest",
    "GradientBoosting",
    "ExtraTrees",
    "StochasticGB",
    "AR1",
    "ARp"
  ],
  "features": {
    "target_lags": [1, 3, 12],
    "exog": { "__all__": { "lags": [0, 1] } },
    "sweep": {
      "packs": ["none", "ta_basic"],
      "normalize": [
        {"method": "none"},
        {"method": "zscore", "window": 12}
      ],
      "max_features": [50, 100],
      "exog_combo_k": 3,
      "exog_combo_limit": 5,
      "exog_combo_names": [
        "usd_idr", "jci", "money_supply", "policy_rate_7drr",
        "jibor_avg", "yield_10y", "gdp_yoy", "cpi_yoy"
      ]
    }
  },
  "output": { "dir": "outputs" }
}